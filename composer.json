{
    "name": "befuture/api-response",
    "description": "Standardized JSON API response helper for Laravel & PHP.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Muratcan Kayalak (BeFuture Interactive)",
            "homepage": "https://befuture.in"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/http-foundation": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "BeFuture\\ApiResponse\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeFuture\\ApiResponse\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BeFuture\\ApiResponse\\ApiResponseServiceProvider"
            ]
        }
    }
}